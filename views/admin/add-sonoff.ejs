<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/sonoff.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
          <% if (errorMessage) { %>
                <div class="user-message user-message--error"><%= errorMessage %></div>
          <% } %>
        <form class="sonoff-form" 
            action="/admin/add-sonoff" method="POST" enctype="multipart/form-data">            
            <div class="form-control">
                <label for="title">Title</label> 
                <input 
                class="<%= validationsErrors.find(e => e.param === 'title') ? 'invalid' : '' %>"
                type="text" name="title" id="title" value="<%= oldInput.title %>">
            </div>
            <div class="form-control">
                <label for="host">Host</label>
                <input 
                class="<%= validationsErrors.find(e => e.param === 'host') ? 'invalid' : '' %>"
                type="text" name="host" id="host" value="<%= oldInput.title %>">
            
            </div> 
            <div class="form-control">
                <label for="MQTTtopic">MQTT topic</label>
                <input 
                class="<%= validationsErrors.find(e => e.param === 'MQTTtopic') ? 'invalid' : '' %>"
                type="text" name="MQTTtopic" id="MQTTtopic" value="<%= oldInput.MQTTtopic %>">
            </div> 
            <div class="form-control">
                <label for="MQTTcommand">MQTTcommand toggle</label>
                <input 
                class="<%= validationsErrors.find(e => e.param === 'MQTTcommand') ? 'invalid' : '' %>"
                type="text" name="MQTTcommand" id="MQTTcommand" value="<%= oldInput.MQTTcommand %>">
            </div>    
            <div class="form-control">
                <label for="MQTTcommandAAN">MQTTcommand - AAN</label>
                <input 
                class="<%= validationsErrors.find(e => e.param === 'MQTTcommandAAN') ? 'invalid' : '' %>"
                type="text" name="MQTTcommandAAN" id="MQTTcommandAAN" value="<%= oldInput.MQTTcommandAAN %>">
            </div>  
            <div class="form-control">
                <label for="MQTTcommand-UIT">MQTTcommand - UIT</label>
                <input 
                class="<%= validationsErrors.find(e => e.param === 'MQTTcommandUIT') ? 'invalid' : '' %>"
                type="text" name="MQTTcommandUIT" id="MQTTcommandUIT" value="<%= oldInput.MQTTcommandUIT %>">
            </div>              
            <div class="form-control">
                    <label for="devicename">devicename</label>
                    <input 
                    class="<%= validationsErrors.find(e => e.param === 'devicename') ? 'invalid' : '' %>"
                    type="text" name="devicename" id="devicename" value="<%= oldInput.devicename %>">
                </div>       
                <div class="form-control">
                    <label for="image">Image</label>
                    <input 
                    type="file" 
                    name="image" 
                    id="image">
                </div>               
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                class="<%= validationsErrors.find(e => e.param === 'description') ? 'invalid' : '' %>"
                name="description" id="description" rows="5"><%= oldInput.description %></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Add Sonoff</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>